<div class="row">
    <h3><%= patient.name %> <%=patient.surname %></h3>
  <div class="col s4">
    <h5>Contact data</h5>
    <div class="card-panel">
      <p>Address: <%= patient.contact.address %></p>
      <p>Phone: <%= patient.contact.phone %></p>
      <p>Email: <%= patient.email %></p>
    </div>
  </div>
  <div class="col s1"></div>
  <div class="col s7">
    <h5>Background</h5>
    <div class="card-panel"></div>
  </div>
</div>
<div class="row">
  <div class="col s4">
    <h5>Personal data</h5>
    <div class="card-panel">
      <p>Age: <%= patient.personaldata.birthday %></p>
      <p>Gender: <%= patient.personaldata.gender %></p>
      <p>Height: <%= patient.personaldata.height %></p>
      <p>Weight: <%= patient.personaldata.weight %></p>
    </div>
  </div>
  <div class="col s1"></div>
  <div class="col s7">
    <h5>Notes</h5>
    <div class="card-panel"></div>
  </div>
</div>

<h5>Pathologies</h5>
